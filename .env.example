# Copy this file to .env.local and fill in your values

# OpenAI API Key (for GPT-3.5 classification)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key (for Claude reasoning and generation)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=
# Perplexity API Key (optional, for research)
# Get from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=

# Imgflip API (for meme generation)
# Get from: https://imgflip.com/signup
IMGFLIP_USERNAME=
IMGFLIP_PASSWORD=

# Supabase Configuration
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# Stripe Configuration
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# Portal configuration ID (create with scripts/create-replyguy-portal-config.js)
STRIPE_PORTAL_CONFIG_ID=
# Your app URL (for redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional Features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PERPLEXITY=true

# Cost Limits (in dollars)
DAILY_COST_LIMIT=100
REQUEST_COST_LIMIT=0.05

# Development
NODE_ENV=development