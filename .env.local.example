# Copy this file to .env.local and fill in your values

# OpenAI API Key (for GPT-3.5 classification)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Anthropic API Key (for Claude reasoning and generation)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# Perplexity API Key (optional, for research)
# Get from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-...

# Supabase Configuration
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_KEY=eyJ...

# Optional Features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PERPLEXITY=true

# Cost Limits (in dollars)
DAILY_COST_LIMIT=100
REQUEST_COST_LIMIT=0.05

# Development
NODE_ENV=development